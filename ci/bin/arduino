#!/bin/bash

for inc in preferences sketchbook arduino_exe cache_ide
do
    if [ "$(type -t $inc)" != "function" ]
    then
	. "$(cd "$(dirname "${BASH_SOURCE[0]}")"; pwd)"/$inc
    fi
done

arduino() {
    OS="$(os "$@")"
    DIR="$(dir "$@")"
    VERSION="$(version "$@")"
    PREFERENCES="$(preferences "$@")"
    SKETCHBOOK="$(sketchbook "$@")"    
    ARDUINO_EXE="$(arduino_exe "$@")"

    if [ ! -r "$ARDUINO_EXE" ]
    then
	echo "Arduido executable $ARDUINO_EXE missing (caching)..."
	if ! cache_ide "$@"
	then
	    exit 1
	fi
    fi
    "$ARDUINO_EXE" --preferences-file "$PREFERENCES" --pref sketchbook.path="$SKETCHBOOK" --pref update.check=false "$@"
}

arduino_self_test() {
    arduino "$@" &
    PID="$!"
    if [ "${PID}" = "" ]
    then
        echo "no launch"
        exit 1
    fi
    kill $PID

    echo "arduino ok"
}

if [[ "${BASH_SOURCE[0]}" == "${0}" ]]
then
    if [ "$1" == "--self-test" ]
    then
	shift
	arduino_self_test "$@"
    else
	arduino_ide "$@"
    fi
fi

